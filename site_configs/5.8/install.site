#!/bin/ksh
export PKG_PATH=http://mirrors.mit.edu/pub/OpenBSD/5.8/packages/amd64/

/usr/sbin/pkg_add -v python-2.7.10
/bin/ln -sf /usr/local/bin/python2.7 /usr/local/bin/python
/bin/ln -sf /usr/local/bin/python2.7-2to3 /usr/local/bin/2to3
/bin/ln -sf /usr/local/bin/python2.7-config /usr/local/bin/python-config
/bin/ln -sf /usr/local/bin/pydoc2.7  /usr/local/bin/pydoc

